<style>
  .jumbotron{
  	color: #2c3e50;
  	background-color: #ecf0f1;
  }
</style>

  <div class="container my-4">
        <div class="jumbotron mb-3">
          <h1 class="text-center display-3"><i class="fa fa-id-card"> The Profile Gallery</i></h1>
          <p class="text-center"> A bunch of beautiful Profiles that you are going to view...</p>
        </div>
        <div class="row justify-content-center">
          <% if(users.length > 0) { %>
          <% users.forEach(user => { %>
          <div class="col-lg-3 mb-3">
              <div class="card border-info p-1" Style="height: 100%">
                    <img class="card-img-top rounded" src="images/<%=user.image%>" alt="user image" height="165">

                <div class="card-body text-center">
                  <h6 class="card-title">
                    <p class="text-muted">Name:  <%=user.name%> </p>
                  </h6>
                  <p class="text-muted">Username: <em><%=user.username%></em></p>
                  <p class="text-muted">Total Post: <%=user.totalPost%></p>
                  <a href="/user/userProfile/<%=user._id%>" class="btn btn-sm btn-info">Details</a>
                </div>
              </div>
          </div>
          <% }); %>
          <% } else { %>
             <h1 class="text-center text-danger mt-3 display-4">Sorry! No User Found</h1>
         <% } %>
      </div>

      <% if (pages > 0) { %>
        <ul class="pagination justify-content-center">
            <% if (current == 1) { %>
                <li class="page-item disabled"><a class="page-link">Previous</a></li>
            <% } else { %>
                <li class="page-item"><a class="page-link" href="/profile/1">Previous</a></li>

            <% } %>
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
                <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                    <li class="page-item active"><a class="page-link"><%= i %></a></li>
                <% } else { %>
                    <li class="page-item"><a class="page-link" href="/profile/<%= i %>"><%= i %></a></li>
                <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                <% } %>
            <% } %>
            <% if (current == pages) { %>
                <li class="page-item disabled"><a class="page-link">Next</a></li>
            <% } else { %>
                <li class="page-item"><a class="page-link" href="/profile/<%= pages %>">Next</a></li>
            <% } %>
        </ul>
      <% } %>

  </div>



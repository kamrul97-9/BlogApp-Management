<%- include ('../partials/header') %>
    <title>Create Post</title>
</head>

    <%- include ('../partials/navbar') %>
<body>
  
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center">
                <h4><%=title%></h4>
                </div>
                <div class="card-block">
                    <% if(update) { %>
                    <form class="p-3" action="/post/update/<%=singlePost._id%>" method="POST">
                    <% } else { %>
                    <form class="p-3" action="/create_new_post" method="POST">
                    <% } %>

                    <div class="form-group">
                        <label class="form-control-label">Post Title</label>
                        <input type="text" name="title" placeholder="Post title"
                        class="form-control" value="<%=singlePost.title%>" required>
                    </div>

                    <!-- <div class="form-group">
                        <label class="form-control-label">Author</label>
                        <input type="text" name="author" placeholder="Author"
                        class="form-control" value="singlePost.author%>" required>
                    </div> -->

                        <div class="form-group">
                            <label for="post_category">Category <%=singlePost.category%>  </label>
                            <select class='form-control' name="category" required>

                                <option selected disabled>Please choose an option</option>
                                <option value="Bangladesh">Bangladesh</option>
                                <option value="Biography">Biography</option>
                                <option value="Book">Book</option>
                                <option value="Cartoon">Cartoon</option>
                                <option value="Desease & Organisms">Desease & Organisms</option>
                                <option value="Education">Education</option>
                                <option value="Economy">Economy</option>
                                <option value="Entertainment">Entertainment</option>
                                <option value="Food & Recepies">Food & Recepies</option>
                                <option value="Game">Game</option>
                                <option value="History">History</option>
                                <option value="International">International</option>
                                <option value="Liberation War Of Bangladesh">Liberation War of Bangladesh</option>
                                <option value="Lifestyle">Lifestyle</option>
                                <option value="Politics">Politics</option>
                                <option value="Sports">Sports</option>
                                <option value="Science">Science</option>
                                <option value="Technology">Technology</option>
                                <option value="Travel">Travel</option>
                                <option value="Others">Others</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-control-label">Write Something about the post</label>
                            <textarea name="description" cols="30" rows="10" class="form-control" required><%=singlePost.description%></textarea>
                        </div>
                            <button type="submit" class="btn btn-primary btn-block">Publish</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

